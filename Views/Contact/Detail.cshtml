@model IyiOlusAdminPanel.Models.Contacts.Contact

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-white shadow rounded p-4">
    <h1 class="text-lg font-semibold mb-4">Soru Güncelle</h1>

    <input asp-for="Id" type="hidden" />

    <div>
        <label asp-for="Subject" class="block mb-1 font-medium">Konu</label>
        <input asp-for="Subject"
               class="w-full border p-2 rounded focus:outline-none focus:ring-2 focus:ring-blue-400" disabled />
        <span asp-validation-for="Subject" class="text-red-500 text-sm"></span>
    </div>


    <div>
        <label asp-for="Message" class="block mb-1 font-medium">Mesaj</label>
        <textarea asp-for="Message"
               class="w-full border p-2 rounded focus:outline-none focus:ring-2 focus:ring-blue-400" disabled rows="4" />
        <span asp-validation-for="Message" class="text-red-500 text-sm"></span>
    </div>
