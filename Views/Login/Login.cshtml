@model IyiOlusAdminPanel.Models.Login.LoginDto

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}


<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="w-full max-w-md bg-white shadow-lg rounded-lg p-8">
        <h1 class="text-2xl font-bold mb-6 text-center">Admin Girişi</h1>

        <form asp-action="Login" method="post" class="space-y-4">
            <!-- Email / Kullanıcı Adı -->
            <div>
                <label asp-for="Email" class="block mb-1 font-medium">Email</label>
                <input asp-for="Email" type="email"
                       class="w-full border p-2 rounded focus:outline-none focus:ring-2 focus:ring-blue-400"
                       placeholder="admin@mail.com" />
                <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
            </div>

            <!-- Şifre -->
            <div>
                <label asp-for="Password" class="block mb-1 font-medium">Şifre</label>
                <input asp-for="Password" type="password"
                       class="w-full border p-2 rounded focus:outline-none focus:ring-2 focus:ring-blue-400"
                       placeholder="******" />
                <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
            </div>

            <!-- Token checkbox -->
            <div class="flex items-center">
                <input asp-for="RememberMe" type="checkbox" class="mr-2">
                <label asp-for="RememberMe">Beni Hatırla</label>
            </div>

            <!-- Submit -->
            <div>
                <button type="submit"
                        class="w-full bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded">
                    Giriş Yap
                </button>
            </div>
        </form>
    </div>
</div>
