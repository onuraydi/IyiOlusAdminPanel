@model List<IyiOlusAdminPanel.Models.Questions.Question>

@{
    ViewData["Title"] = "Sorular";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int currentPage = (int)ViewData["CurrentPage"];
    int totalPages = (int)ViewData["TotalPages"];
    int count = 0;
}

<div class="bg-white shadow rounded p-4">
    <h1 class="text-lg font-semibold mb-4">Sorular</h1>

    <h2 class="text-lg font-semibold mb-4">Profil Tipi: Kariyer</h2>
    <table class="w-full border-collapse">
        <thead>
            <tr class="bg-gray-100 text-left">
                <th class="p-2 border">#</th>
                <th class="p-2 border">Soru</th>
                <th class="p-2 border">Soru Tipi</th>
                <th class="p-2 border">Güncelle</th>
                <th class="p-2 border">Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                if (item.ProfileTypeResponse.Type == ProfileTypes.Kariyer)
                {
                    count++;
                    <tr>
                        <td class="p-2 border">@count</td>
                        <td class="p-2 border">@item.ProfileQuestion</td>
                        <td class="p-2 border">@item.QuestionType</td>
                        <td class="p-2 border">
                            <button onclick="location.href='@Url.Action("Update","Question", new { id = item.Id })'"
                                    class="bg-blue-500 hover:bg-blue-600 text-white px-3 py-1 rounded">
                                Güncelle
                            </button>
                        </td>
                        <td class="p-2 border">
                            <button onclick="if(confirm('Silmek istediğine emin misin?')) location.href='@Url.Action("Delete","Question", new { id = item.Id })'"
                                    class="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded">
                                Sil
                            </button>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
